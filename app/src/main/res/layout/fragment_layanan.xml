                            android:fontFamily="@font/poppinsextra"
                            android:textAllCaps="true"
                            android:textColor="@color/color_30"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/artikelJudul"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="Merupakan lokasi untuk mendirikan tenda dan melakukan kegiatan berkemah, berupa ruang luas di luar ruangan."
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="18dp">

                            <ImageView
                                android:id="@+id/artikelSampul"
                                android:layout_width="120dp"
                                android:layout_height="171dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/cat_4" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

