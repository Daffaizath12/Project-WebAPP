<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1E4356"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="18dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="171dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/cat_4" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="120dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_text"
                            android:backgroundTint="#b3c0c7"
                            android:paddingLeft="15dp"
                            android:paddingTop="2dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="2dp"
                            android:text="Properti Baru"
                            android:fontFamily="@font/poppinsextra"
                            android:textAllCaps="true"
                            android:textColor="@color/color_30"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="Berada di pusat area residential jember, yang akan menjadi pusat bisnis terbaru kota jember. Memenuhi berbagai kebutuhan anda dimulai dari furniture, seperti menggunakan Smart Lock"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="18dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="171dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/cat_4" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="120dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_text"
                            android:backgroundTint="#b3c0c7"
                            android:paddingLeft="15dp"
                            android:paddingTop="2dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="2dp"
                            android:text="Cluster Perumahan"
                            android:fontFamily="@font/poppinsextra"
                            android:textAllCaps="true"
                            android:textColor="@color/color_30"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="Berbagai macam Cluster yang sangat diimpikian diantaranya, Boluevard Magnolia, Camelia, Ege Gardenia, New Edge Gardenia, Pinewood, Plumeria, QBIX, Ruko, SOHO."
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="18dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="171dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/cat_4" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="120dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_text"
                            android:backgroundTint="#b3c0c7"
                            android:paddingLeft="15dp"
                            android:paddingTop="2dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="2dp"
                            android:text="Pesan Rumah"
                            android:fontFamily="@font/poppinsextra"
                            android:textAllCaps="true"
                            android:textColor="@color/color_30"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="Segera miliki hunian nyaman dan bernilai investasi tinggi diberbagai Cluster unggulan dan didukung dengan sistem keamanan 24 jam."
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="18dp">

                            <ImageView
                                android:id="@+id/artikelSampul"
                                android:layout_width="120dp"
                                android:layout_height="171dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/cat_4" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="120dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/artikelDivisi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_text"
                            android:backgroundTint="#b3c0c7"
                            android:paddingLeft="15dp"
                            android:paddingTop="2dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="2dp"
                            android:text="Fasilitas"
                            android:fontFamily="@font/poppinsextra"
                            android:textAllCaps="true"
                            android:textColor="@color/color_30"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/artikelJudul"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="Bernady Land Slawu menghadirkan Mall, Hotel, SPBU, Bernady Camp, Cendani Park, Still Autocare dan lainnya."
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>