                            android:fontFamily="@font/poppinsextra"
                            android:textAllCaps="true"
                            android:textColor="@color/color_30"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/artikelJudul"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="Sebuah area yang mempunyai ruang dalam berbagai kondisi. Kondisi yang dimaksud diantaranya lokasi, ukuran dan luasan, iklim dan kondisi khusus lainnya seperti tujuan serta fungsi spesifik dari pengembangan taman."
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
